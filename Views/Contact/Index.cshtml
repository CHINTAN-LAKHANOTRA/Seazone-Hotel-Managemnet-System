<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch Map Location</title>

    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>

</head>

<body>

<div class='main-container'>
    <div id="map"></div>
    <script>
        function initMap() {
            // Center coordinates
            var center = { lat: 23.34793076844109, lng: 70.25678451534345 };

            // Create a map object and specify the DOM element for display.
            var map = new google.maps.Map(document.getElementById('map'), {
                center: center,
                zoom: 15 // You can adjust the zoom level as needed
            });

            // Create a marker and set its position.
            var marker = new google.maps.Marker({
                map: map,
                position: center,
                title: 'Your Location'
            });
        }
    </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdzRGfBn-L-9dImWXxamhLkZPtpQNZjMI&callback=initMap" async defer></script>

    <div class='right-container'>
        <h1>Send us a Message!</h1>
        <form class='form-contact' asp-action="Index" asp-controller="Contact" method="post">
            <div class="input-container">
                <label for="fullName">Full Name:</label>
                <input id="fullName"
                       name='fullName'
                       type='text'
                       placeholder='Enter your full name'
                       value='@Model?.FullName'
                       required />

                <label for="email">Email:</label>
                <input id="email"
                       name='email'
                       type='email'
                       placeholder='Enter your email'
                       value='@Model?.Email'
                       required />

                <label for="subject">Subject:</label>
                <input id="subject"
                       name='subject'
                       type='text'
                       placeholder='Enter the subject'
                       value='@Model?.Subject'
                       required />
                <span class='error'></span>

                <label for="message">Message:</label>
                <textarea id="message"
                          name='message'
                          placeholder='Enter your message'
                          rows='4'
                          maxlength='100'
                          required>@Model?.MessageContent</textarea>
                <span class='error'></span>
            </div>
            <button type='submit'>Send</button>
        </form>
    </div> <!-- Closing right-container -->
</div>
<!-- Closing main-container -->
</body>
</html>
